<?xml version="1.0" encoding="UTF-8"?>

<Pack type="widget">
	<Title>
		Alternative post office
	</Title>
	<Description><![CDATA[
		<p>This widget uses Bring's Post Office API to allow the user to choose their
			preferred post office. This is mainly intended for online shopping to allow the
			user to choose another post office than the one closest to their shipping address.</p>
	]]></Description>
	<Person role="author">
		<Name>Stian Mathiassen</Name>
		<Company>BEKK</Company>
		<Email>stian.mathiassen@gmail.com</Email>
		<Url>http://www.bekk.no</Url>
	</Person>
    <Person>
		<Name>Nina Volstad</Name>
		<Company>BEKK</Company>
		<Email>nina.volstad@bekk.no</Email>
		<Url>http://www.bekk.no</Url>
	</Person>
	<Install>
		<Step><![CDATA[
			<p>This widget depends on jQuery, so please add jQuery to your site first.</p>
		]]></Step>
		<Step><![CDATA[
			<p>Add the Optional Post Office widget:</p>
			<pre class="html">&lt;script type="text/javascript" src="http://fraktguide.bring.no/fraktguide/js/utleveringsenhet-1.0.0.js"&gt;&lt;/script&gt;</pre>
		]]></Step>
		<Step><![CDATA[
			<p>Initialize it</p>
			<pre class="javascript">$("divid").utleveringsenhet();</pre>
		]]></Step>
	</Install>
	<PreviewCode highlightLines="2,5" height="200"><![CDATA[
<script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
<script type="text/javascript" src="http://fraktguide.bring.no/fraktguide/js/utleveringsenhet-1.0.0.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('#divid').utleveringsenhet();
    });
</script>
<form>
	<div id="divid"></div>
</form>
		]]></PreviewCode>
	<Download>
		http://fraktguide.bring.no/fraktguide/js/utleveringsenhet-1.0.0.js
	</Download>
