<?xml version="1.0" encoding="UTF-8"?>

<Pack type="widget">
    <Handle>choosepickuppointwithmap</Handle>
	<Title>
		Choose pickup point with map
	</Title>
	<Description><![CDATA[
		<p>This widget uses Bring's Pickup point API to allow the user to choose their
			preferred post office. This is mainly intended for online shopping to allow the
			user to choose another pickup point than the default to their shipping address.</p>
	]]></Description>
	<Person role="author">
		<Name>Stian Mathiassen</Name>
		<Company>BEKK</Company>
		<Email>stian.mathiassen@gmail.com</Email>
		<Url>http://www.bekk.no</Url>
	</Person>
    <Person>
		<Name>Nina Volstad</Name>
		<Company>BEKK</Company>
		<Email>nina.volstad@bekk.no</Email>
		<Url>http://www.bekk.no</Url>
	</Person>
	<Install>
		<Step><![CDATA[
			<p>This widget depends on jQuery and Google Maps, so please add those to your site first.</p>
		]]></Step>
		<Step><![CDATA[
			<p>Add the Post Office widget:</p>
			<pre class="html">&lt;script type="text/javascript" src="http://fraktguide.bring.no/fraktguide/js/utleveringsenhet-1.0.1.js"&gt;&lt;/script&gt;</pre>
		]]></Step>
		<Step><![CDATA[
			<p>Initialize it</p>
			<pre class="javascript">$("divid").utleveringsenhet();</pre>
		]]></Step>
	</Install>
	<PreviewCode highlightLines="2,5-9" height="200"><![CDATA[
<script type="text/javascript" src="http://code.jquery.com/jquery-latest.js"></script>
<script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
<script type="text/javascript" src="http://fraktguide.bring.no/fraktguide/js/utleveringsenhet-1.0.1.js"></script>
<script type="text/javascript">
    $(document).ready(function() {
        $('#divid').utleveringsenhet({
             googleMaps: true,
             mapHeight: 400,
             mapWidth: 400
        });
    });
</script>
<form>
	<div id="divid"></div>
</form>
		]]></PreviewCode>
